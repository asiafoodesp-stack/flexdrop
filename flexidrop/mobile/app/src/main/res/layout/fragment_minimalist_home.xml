<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Logo Minimalista -->
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/ic_flexidrop_logo"
            android:contentDescription="Flexidrop Logo" />

        <!-- Título Principal -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Bienvenido a Flexidrop"
            android:textSize="20sp"
            android:textColor="#2D3748"
            android:fontFamily="sans-serif-medium" />

        <!-- Subtítulo -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="Movilidad colaborativa simplificada"
            android:textSize="14sp"
            android:textColor="#718096"
            android:gravity="center" />

        <!-- Card de Búsqueda -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#F7FAFC"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeColor="#E2E8F0"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/ic_search"
                    android:tint="#0FB478"
                    android:contentDescription="Search Icon" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buscar Trayectos"
                    android:textSize="16sp"
                    android:textColor="#2D3748"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="4dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Encuentra viajes cerca de ti"
                    android:textSize="14sp"
                    android:textColor="#718096"
                    android:gravity="center" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Card de Trayectos Cercanos -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_nearby_trips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#F7FAFC"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeColor="#E2E8F0"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/ic_location"
                    android:tint="#0FB478"
                    android:contentDescription="Location Icon" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trayectos Cercanos"
                    android:textSize="16sp"
                    android:textColor="#2D3748"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="4dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 viajes disponibles cerca"
                    android:textSize="14sp"
                    android:textColor="#718096"
                    android:gravity="center" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Card de Acciones Rápidas -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_quick_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#F7FAFC"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeColor="#E2E8F0"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/ic_lightning"
                    android:tint="#0FB478"
                    android:contentDescription="Quick Actions Icon" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acciones Rápidas"
                    android:textSize="16sp"
                    android:textColor="#2D3748"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="4dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Publica viaje, envía paquete"
                    android:textSize="14sp"
                    android:textColor="#718096"
                    android:gravity="center" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Status de Ubicación -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#ECFDF5"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeColor="#A7F3D0"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_check"
                    android:tint="#0FB478"
                    android:contentDescription="Status Icon" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ubicación activa - Madrid, España"
                    android:textSize="14sp"
                    android:textColor="#065F46" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>